doctype html

html 
  head
    css:
      html, body, iframe {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
        border: 0;
        display: block;
      }

  body
    - data_attributes = locals.map{|k,v| ["data-#{k}", v]}.to_h
    iframe src="/gadget/index.html" allowfullscreen="true" *data_attributes
